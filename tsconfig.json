{
  "compilerOptions": {
    "lib": ["ESNext"],
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "target": "ES2020",
    "outDir": "lib",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.test.ts",
    "services/**/*.ts",
    "scripts/**/*.ts",
    "__e2e__/**/*.ts",
  ],
  "exclude": [
    "node_modules/**/*",
  ]
}
